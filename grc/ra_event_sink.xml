<?xml version="1.0"?>
<block>
  <name>Event Sink</name>
  <key>ra_event_sink</key>
  <category>[ra]</category>
  <import>import ra_event_sink</import>
  <make>ra_event_sink.ra_event_sink($setup, $vlen, $sample_rate, $record)</make>
  <callback>set_setup( $setup)</callback>
  <callback>set_vlen( $vlen)</callback>
  <callback>set_sample_rate( $sample_rate)</callback>
  <callback>set_record( $record)</callback>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
    <param>
    <name>Setup File</name>
    <key>setup</key>
    <value>Watch.not</value>
    <type>string</type>
  </param>
<param>
    <name>Record</name>
    <key>record</key>
    <value>0</value>
    <type>int</type>
  </param>
  <param>
    <name>Sample Rate (Hz)</name>
    <key>sample_rate</key>
    <value>1.E6</value>
    <type>float</type>
  </param>
  <param>
    <name>Vec Length</name>
    <key>vlen</key>
    <value>128</value>
    <type>int</type>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$vlen</vlen>
  </sink>
  <sink>
    <name>magnitude</name>
    <type>float</type>
    <vlen>1</vlen>
  </sink>
  <sink>
    <name>stddev</name>
    <type>float</type>
    <vlen>1</vlen>
  </sink>
  <sink>
    <name>eventmjd</name>
    <type>complex</type>
    <vlen>1</vlen>
  </sink>
  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>ecount</name>
    <type>float</type>
    <vlen>1</vlen>
  </source>
</block>
